.PHONY : strings
strings:
ifneq (${COMPILE_STRINGS},0)
	${JX_ROOT}/bin/compile_jstrings ${JX_ROOT}/libjx/strings/* \
      --code kJXCoreDefaultStringData Sources/Support/jxStringData.h
endif
	 